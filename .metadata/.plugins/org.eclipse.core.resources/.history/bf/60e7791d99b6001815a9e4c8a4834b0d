<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>

<script>
$(document).ready(function() {
	$.ajax({
		type: 'GET',
		url: 'http://www.kobis.or.kr/kobisopenapi/webservice/rest/boxoffice/searchWeeklyBoxOfficeList.json?key=a19c59ff51a6a8f37d37e30cd7e64bb9&targetDt=20180909',
		contentType: 'application/x-www-form-urlencoded; charset=utf-8',
		success: function(result) {
			var rs = [];
			for(var i=0; i<3; i++) {
				rs.push('<div class="col card mb-3">');
				rs.push('<h4 class="card-header"><span class="badge badge-pill badge-dark">'+result['boxOfficeResult']['weeklyBoxOfficeList'][i]['rank']+'ìœ„</span> '+result['boxOfficeResult']['weeklyBoxOfficeList'][i]['movieNm']+'</h4>');
				rs.push('</div>');
				rs.push('<img style="height: 200px; width: 100%; display: block;" src="#" alt="poster">');
			}
			rs.push('<div class="w-100"></div>');
			$('#resultBoxOffice').html(rs.join(''));
		}
	});
});
</script>